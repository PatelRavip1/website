<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
        font-family: monospace;
    }
    p {
        display: block;
        margin-block-start: 1em;
        margin-block-end: 1em;
        margin-inline-start: 0px;
        margin-inline-end: 0px;
        unicode-bidi: isolate;
        max-width: 600px;
        font-size: 0.9rem;
    }
    a {
        color: white;
        text-decoration: none;
    }
    .imgs {
        width: 100%;
        max-width: 200px;
        height: auto;
        margin: 1rem;
        border-radius: 5%;
        object-fit: cover;
        filter: grayscale(90%);
        transition: filter 0.5s ease;
    }
    .imgs:hover {
        filter: grayscale(0%);
    }
</style>
